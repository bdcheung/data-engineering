<h1>Orders</h1>

<table>
	<tr>
		<th>Purchaser Name</th>
		<th>Item Descrption</th>
		<th>Item Price</th>
		<th>Purchase Count</th>
		<th>Total Purchase</th>
		<th>Merchant Address</th>
		<th>Merchant Name</th>
	</tr>
	<% @orders.each do |i| %>
	<tr>
		<td>
			<%= i.user.name %>
		</td>
		<td>
			<%= i.product.description %>
		</td>
		<td>
			<%= number_to_currency(i.product.price) %>
		</td>
		<td>
			<%= i.quantity %>
		</td>
		<td>
			<%= number_to_currency(i.total_revenue) %>
		</td>
		<td>
			<%= i.merchant.address %>
		</td>
		<td>
			<%= i.merchant.name %>
		</td>
	</tr>
	<% end %>
</table>
<h2>Total Revenue: <%= number_to_currency(Upload.gross_revenue) %></h2>
<h2>Import orders</h2>
<%= form_tag(imports_path, id: 'import', multipart: true) do %>
	<%= file_field_tag :file %>
	<%= submit_tag "Import" %>
<% end %>